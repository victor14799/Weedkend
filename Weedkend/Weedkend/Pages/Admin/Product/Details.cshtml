@page
@model Weedkend.Pages.Admin.DetailsModel

@{
    TempData["FullName"] = @Model.FullName;
    TempData["Image"] = @Model.Avatar;
    TempData["Title"] = "Admin";
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ProName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
        @{
            var imgUrl = "/img/product/" + Model.Product.ImgUrl;
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ImgUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="@imgUrl" style="height: 150px; width: 150px;"/>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.CategoryNavigation.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.CategoryNavigation.CategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ProBrandNavigation.BrandName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProBrandNavigation.BrandName)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Product.ProductId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
