@page
@model Weedkend.Pages.Admin.Product.CreateModel
@{
    TempData["FullName"] = @Model.FullName;
    TempData["Image"] = @Model.Avatar;
    TempData["Title"] = "Admin";
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.ProName" class="control-label"></label>
                <input asp-for="Product.ProName" class="form-control" />
                <span asp-validation-for="Product.ProName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Category" class="control-label"></label>
                <select asp-for="Product.Category" class="form-control" asp-items="@((List<SelectListItem>)ViewData["ProCategory"])"></select>
            </div>
            <div class="form-group">
                <label asp-for="Product.ProBrand" class="control-label"></label>
                <select asp-for="Product.ProBrand" class="form-control" asp-items="@((List<SelectListItem>)ViewData["ProBrand"])"></select>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ImgUrl" class="control-label"></label>
                <input asp-for="Product.ImgUrl" type="file" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
